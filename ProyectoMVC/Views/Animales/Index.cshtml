@{
    ViewData["Title"] = "Animales David";

}

@model List<Animal>

<ul>
    @foreach (Animal animal in Model)
    {
        <li>Id: @animal.IdAnimal Nombre: @animal.Nombre</li> 
        //<li>Nombre: @animal.Nombre</li>
    }
</ul>


<h1>
    Animales David
</h1>
<div class="text-center">
    <form asp-controller="Home" asp-action="SubmitFormAnimales" method="post">
        <div class="row">
            <div class="form-group">
                <input name="nombre" placeholder="Nombre Animal" class="form-control">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-default">Submit</button>
            </div>
        </div>
    </form>
</div>